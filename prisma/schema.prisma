generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipes {
  id         String      @id
  name       String
  seasons    Int[]
  recipeRows Reciperows[]
}

model Reciperows {
  id              String      @id
  name            String
  amountPerPerson Float
  unit            String
  recipe          Recipes     @relation(fields: [recipeId], references: [id])
  recipeId        String
  ingredients     Ingredients?
	@@map("Reciperow")
}

model Ingredients {
  id          String     @id
  name        String
  reciperow   Reciperows? @relation(fields: [ReciperowId], references: [id])
  ReciperowId String?    @unique
	@@map("Ingredient")
}
