// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipes {
  id         String      @id
  name       String
  seasons    Int[]
  recipeRows Reciperow[]
}

model Reciperow {
  id       String  @id
  name     String
  recipe   Recipes @relation(fields: [recipeId], references: [id])
  recipeId String
  ingredients Ingredient?
}

model Ingredient {
  id       String  @id
  name     String
  reciperow Reciperow @relation(fields: [ReciperowId], references: [id])
  ReciperowId String
}